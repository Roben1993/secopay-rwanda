rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // KYC documents: only owner can upload and read
    match /kyc/{uid}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == uid;
      allow read: if request.auth != null && request.auth.uid == uid;
    }

    // Merchant documents: only owner can upload and read
    match /merchants/{uid}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == uid;
      allow read: if request.auth != null && request.auth.uid == uid;
    }

    // Payment proofs: only the uploading user (by uid subfolder) can write
    match /payment_proofs/{uid}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == uid;
      allow read:  if request.auth != null;
    }

    // Dispute evidence: only the uploading user (by uid subfolder) can write
    match /disputes/{uid}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == uid;
      allow read:  if request.auth != null;
    }
  }
}
